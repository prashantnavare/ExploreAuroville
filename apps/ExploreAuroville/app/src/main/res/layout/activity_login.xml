<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >

    <LinearLayout
        android:id="@+id/radioButtonsLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        >

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <RadioButton
                android:id="@+id/aurovilianRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="I have an auroville.org.in email ID"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                />

            <RadioButton
                android:id="@+id/guestRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="I am a guest of Auroville"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                />

            <RadioButton
                android:id="@+id/visitorRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="I am a visitor"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                />

        </RadioGroup>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/aurovilianLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/radioButtonsLL"
        android:visibility="gone"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Please login with your Auroville email ID"
            />

        <com.google.android.gms.common.SignInButton
            android:id="@+id/aurovilianSignInbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/guestLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/radioButtonsLL"
        android:visibility="gone"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Please enter your phone number"
            />

        <EditText
            android:id="@+id/guestPhoneNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            />
        <Button
            android:id="@+id/guestSignInbutton"
            android:text="Next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/guestExpiredLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/radioButtonsLL"
        android:visibility="gone"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your Explore Auroville guest access has expired."
            />

        <Button
            android:id="@+id/guestExpiredbutton"
            android:text="OK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/visitorLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/radioButtonsLL"
        android:visibility="gone"
        >

        <Button
            android:id="@+id/visitorNextbutton"
            android:text="Next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            />

    </LinearLayout>

</RelativeLayout>
